<div class="max-w-2xl m-auto">
  <%= render 'shared/errors_validation', obj: @project%>
</div>
<section>
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto xl:my-10 lg:py-0">
    <div class="w-full bg-white border rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
            <%= @project.new_record? ? "Create a new project" : "Edit project" %>
        </h1>
        <%= form_with model: @project, data: { turbo: false } do |form| %>
          <div class="space-y-4 md:space-y-6">
            <div>
              <%= form.label :name, class:"#{form_label_css}" %>
              <%= form.text_field :name, autofocus: true, class:"#{text_field_input_css}", placeholder:"Project name" %>
            </div>
            <div>
              <%= form.label :description, class:"#{form_label_css}" %>
              <%= form.text_area :description, rows:3, class:"#{form_text_area_input_css}", placeholder:"Description..." %>
            </div>
            <div>
              <%= form.label :status, class:"#{form_label_css}" %>
              <%= form.select :status, ['active', 'suspended', 'ended'], {}, {class:"#{form_select_input_css}" }%>
            </div>
            <div>
              <%= form.label :end_date, class:"#{form_label_css}"%>
              <%= form.date_select :end_date, {}, {class:"#{form_date_select_input_css}" } %>
            </div>
            <div>
              <%= form.submit (@project.new_record? ? "Create project" : "Update project"), class:"#{form_submit_btn_css}" %>
              <%= link_to "Back", projects_path, class:"#{form_back_btn_css} mt-4" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>