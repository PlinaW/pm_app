<%= render 'shared/errors_validation', obj: @project%>

<%= form_with model: @project, data: { turbo: false } do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['active', 'suspended', 'ended'] %>
  </div>

  <div>
    <%= form.label :start_date %><br>
    <%= form.date_select :start_date %><br>
  </div>

  <div>
    <%= form.label :end_date %><br>
    <%= form.date_select :end_date %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>