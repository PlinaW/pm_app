<section class="bg-white dark:bg-gray-900">
  <div class="max-w-2xl px-4 py-8 mx-auto lg:py-16">
    <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Edit Your profile <%= current_user.first_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="grid gap-4 mb-4 sm:grid-cols-2 sm:gap-6 sm:mb-5">

        <div class="w-full">
          <%= f.label :first_name, class:"#{label_class}" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class:"#{text_field_input}", placeholder:"Your first name"  %>
        </div>
        
        <div class="w-full">
          <%= f.label :last_name, class:"#{label_class}" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class:"#{text_field_input}", placeholder:"Your last name"  %>
        </div>
        
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="w-full">
          <%= f.label :password, class:"#{label_class}" %>
          <%= f.password_field :password, autocomplete: "new-password", class:"#{text_field_input}", placeholder:"leave blank if you don't want to change it"   %>
          <% if @minimum_password_length %>
            <em class="#{label_class}" ><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="w-full">
          <%= f.label :password_confirmation, class:"#{label_class}" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"#{text_field_input}", placeholder:"" %>
        </div>

        <div class="w-full">
          <%= f.label :email, class:"#{label_class}"  %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"#{text_field_input}", placeholder:"Your first name"  %>
        </div>

        <div class="w-full">
          <%= f.label :current_password, class:"#{label_class}" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class:"#{text_field_input}", placeholder:"input your password to confirm changes"  %>
        </div>

        <div class="w-full">
          <%= f.submit "Update", class:"#{form_submit_btn}" %> 
        </div>

        <div class="w-full text-white bg-[#f21c1c] hover:bg-[#a30b0b] focus:ring-4
                    focus:outline-none focus:ring-[#A4CAFE] font-medium rounded-lg 
                    text-sm px-5 py-2.5 text-center">
          Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
        </div>

        <%= link_to "Back", :back, class:"w-full text-yellow-600  items-center hover:text-white 
                                          border border-yellow-600 hover:bg-yellow-600 focus:ring-4 focus:outline-none 
                                          focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>

      </div>
    <% end %>
  </div>
</section>
