<div class="max-w-2xl m-auto">
  <%= render "devise/shared/error_messages", resource: resource %>
</div>
<section>
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-8">
    <div class="w-full bg-white border rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
            Create an account
        </h1>
        <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :invitation_token, readonly: true %>

          <div class="space-y-4 md:space-y-6">
            <% if f.object.class.require_password_on_accepting %>

              <div class="field">
                <%= f.label :first_name, class:"#{form_label_css}" %>
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class:"#{text_field_input_css}", placeholder: "first name" %>
              </div>

              <div class="field">
                <%= f.label :last_name, class:"#{form_label_css}" %>
                <%= f.text_field :last_name, autocomplete: "last name", class:"#{text_field_input_css}", placeholder: "last name" %>
              </div>

              <div class="field">
                <%= f.label :password, class:"#{form_label_css}" %>
                <%= f.password_field :password,  autocomplete: "password", class:"#{text_field_input_css}", placeholder: "password" %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation, class:"#{form_label_css}" %>
                <%= f.password_field :password_confirmation,  autocomplete: "password_confirmation", class:"#{text_field_input_css}", placeholder: "confirm password" %>
              </div>
            <% end %>
            <div class="actions">
              <%= f.submit "Set my details", class:"#{form_submit_btn_css}" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>