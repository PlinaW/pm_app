<section>
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-8">
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
        Sign in to your account
        </h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="space-y-4 md:space-y-6">
            <div class="field">
              <%= f.label :email, class:"#{form_label_css}" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"#{text_field_input_css}", placeholder:"name@company.com" %>
            </div>
            <div class="field">
              <%= f.label :password, class:"#{form_label_css}" %>
              <%= f.password_field :password, autocomplete: "current-password", class:"#{text_field_input_css}", placeholder:"••••••••" %>
            </div>
            <div class="flex items-center justify-between">
              <div class="flex items-start">
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me, class:"#{form_check_box_input_css}" %>
                    <%= f.label :remember_me, class:"text-gray-500 dark:text-gray-300" %>
                  </div>
                <% end %>
              </div>
              <a href="#" class="text-sm font-medium text-primary-600 hover:underline dark:text-primary-500">Forgot password?</a>
            </div>
            <div class="actions">
              <%= f.submit "Log in", class:"#{form_submit_btn_css}" %>
            </div>
            <p class="text-sm font-light text-gray-500 dark:text-gray-400">
              Don’t have an account yet? <%= link_to 'Sign up', new_user_registration_path, class:"font-medium text-primary-600 hover:underline dark:text-primary-500" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
